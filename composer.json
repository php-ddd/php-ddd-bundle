    "description": "Library to manage event",
    "minimum-stability": "stable",
    "license": "MIT",
    "autoload": {
        "psr-4": {"PhpDDD\\PhpDDDBundle\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": {
            "PhpDDD\\PhpDDDBundle\\": "tests/"
        }
